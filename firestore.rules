
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null
        && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /* ---------- ADMIN ROLE ---------- */
    match /roles_admin/{userId} {
      // Admins can see who else is an admin.
      allow read: if isAdmin();
      // A user can create their own admin role document (e.g., via the "Make me Admin" button).
      // This is a one-time action. Further modifications should be restricted.
      allow write: if request.auth.uid == userId;
    }

    /* ---------- PUBLIC CONTENT ---------- */
    match /tours/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /safaris/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /transfers/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /news_updates/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ---------- REVIEWS ---------- */
    match /reviews/{reviewId} {
      // Anyone can submit a review, but it must be valid and start as 'pending'.
      allow create: if
        request.resource.data.status == 'pending'
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5
        && request.resource.data.authorName is string
        && request.resource.data.authorName.size() > 0
        && request.resource.data.comment is string
        && request.resource.data.comment.size() > 0;

      // Only admins can approve, reject, or delete reviews.
      allow update, delete: if isAdmin();

      // Read Rules:
      // - Admins can read any review document.
      // - The public can only read documents that have been approved.
      allow get: if resource.data.status == 'approved' || isAdmin();
      
      // List Rules:
      // - Admins can list all reviews (for the dashboard).
      // - The public can list ONLY approved reviews (for the homepage carousel).
      allow list: if isAdmin() || request.query.where.status == 'approved';
    }
  }
}
