rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /roles_admin/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /tours/{tourId} {
      allow read, list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }
    match /safaris/{safariId} {
      allow read, list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }
    match /transfers/{transferId} {
      allow read, list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }
    match /news_updates/{postId} {
      allow read, list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /reviews/{reviewId} {
      // Anyone can submit a review.
      allow create: if request.resource.data.status == 'pending' 
                      && request.resource.data.rating >= 1 && request.resource.data.rating <= 5
                      && request.resource.data.authorName is string
                      && request.resource.data.comment is string;
      
      // Admins can do anything with reviews.
      allow read, update, delete: if isAdmin();
      
      // Public users can only read approved reviews individually.
      allow get: if resource.data.status == 'approved';

      // Public users can only list reviews if they are querying for approved ones.
      allow list: if request.query.where.status == 'approved';
    }
  }
}
