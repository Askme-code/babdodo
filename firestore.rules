rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Default catch-all for collections that need open access for now.
    // This includes safaris, tours, transfers, and news_updates.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Specific rules for reviews can be more granular if needed in the future
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Protect the admin roles collection
    match /roles_admin/{userId} {
        allow read: if isAdmin();
        // Allow a user to make themselves an admin
        allow create: if request.auth.uid == userId;
        allow update, delete: if false; // prevent modification or deletion
    }
  }
}
