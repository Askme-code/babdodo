
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Allow admin full access to all collections
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Allow public write access for reviews
    match /reviews/{reviewId} {
      allow create: if true;
      allow read: if true;
      // Updates and deletes only by admin
      allow update, delete: if isAdmin();
    }
    
    // Allow public read on all service and content collections
    match /tours/{tourId} {
      allow read: if true;
    }
    match /safaris/{safariId} {
      allow read: if true;
    }
    match /transfers/{transferId} {
      allow read: if true;
    }
    match /news_updates/{newsUpdateId} {
      allow read: if true;
    }
  }
}
