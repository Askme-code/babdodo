rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null
        && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /* ---------- ADMIN ROLE ---------- */
    match /roles_admin/{userId} {
      allow read: if isAdmin();
      allow write: if false;
    }

    /* ---------- PUBLIC CONTENT ---------- */
    match /tours/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /safaris/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /transfers/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /news_updates/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ---------- REVIEWS (FIXED) ---------- */
    match /reviews/{reviewId} {

      // Create review (public)
      allow create: if
        request.resource.data.status == 'pending'
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5
        && request.resource.data.authorName is string
        && request.resource.data.comment is string;

      // Admin moderation
      allow update, delete: if isAdmin();

      // Per-document read protection
      allow get: if resource.data.status == 'approved' || isAdmin();

      // REQUIRED for getDocs(collection("reviews"))
      allow list: if true;
    }
  }
}
