
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null
        && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /* ---------- ADMIN ROLE ---------- */
    match /roles_admin/{userId} {
      // Admins can see who else is an admin
      allow read: if isAdmin();
      // Only the user themselves can trigger the cloud function to create their own admin doc
      allow write: if request.auth.uid == userId;
    }

    /* ---------- PUBLIC CONTENT ---------- */
    match /tours/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /safaris/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /transfers/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /news_updates/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ---------- REVIEWS ---------- */
    match /reviews/{reviewId} {
      // Anyone can submit a review (always pending)
      allow create: if
        request.resource.data.status == 'pending'
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5
        && request.resource.data.authorName is string
        && request.resource.data.comment is string;

      // Admins can approve / reject / delete
      allow update, delete: if isAdmin();

      // Read rules:
      // - Public users see ONLY approved reviews
      // - Admins see all reviews
      allow get: if resource.data.status == 'approved' || isAdmin();
      
      // List rules:
      // - Admins can list all reviews (for the dashboard)
      // - Public can list ONLY approved reviews (for the homepage carousel)
      allow list: if isAdmin() || (request.query.where.status == 'approved');
    }
  }
}
